<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
                  type="com.sabinhantu.caloriecounter.addFood.AddFoodViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".addFood.AddFoodFragment">
        <TextView
                android:text="@{viewModel.selectedFood.label}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addfood_name"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="20sp"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" tools:text="@string/foodname"/>
        <TextView
                android:text="@{viewModel.displayKcalPer100G}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addfood_kcal_per100"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/addfood_name"
                app:layout_constraintStart_toStartOf="@+id/addfood_name"
                android:textSize="16sp"
                tools:text="@string/per100g_format"/>
        <TextView
                android:text="cf ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addfood_current_gram" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/addfood_kcal_per100" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>