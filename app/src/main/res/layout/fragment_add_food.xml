<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
                  type="com.sabinhantu.caloriecounter.addFood.AddFoodViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".addFood.AddFoodFragment">
        <TextView
                android:text="@{viewModel.selectedFood.label}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addfood_name"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="20sp"/>
        <TextView
                android:text="240 kcal per 100 g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addfood_kcal_per100"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/addfood_name"
                app:layout_constraintStart_toStartOf="@+id/addfood_name" android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>