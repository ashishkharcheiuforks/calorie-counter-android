<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_auth_field">
        <item name="android:ems">10</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/auth_input_style</item>
        <item name="android:padding">14dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <style name="style_button_black">
        <item name="android:background">@drawable/button_rounded_black</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

</resources>
